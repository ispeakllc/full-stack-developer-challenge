{
  "name": "@nx-ddd/database-infrastructure",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "nx": {
    "name": "database-infrastructure",
    "sourceRoot": "libs/database/infrastructure/src",
    "implicitDependencies": [
      "auth-infrastructure"
    ],
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "libs/database/infrastructure/dist",
          "main": "libs/database/infrastructure/src/index.ts",
          "tsConfig": "libs/database/infrastructure/tsconfig.lib.json",
          "skipTypeCheck": true,
          "stripLeadingPaths": true
        }
      },
      "reset": {
        "executor": "nx:run-commands",
        "options": {
          "command": "drizzle-kit reset",
          "cwd": "libs/database/infrastructure"
        }
      },
      "push": {
        "executor": "nx:run-commands",
        "options": {
          "command": "drizzle-kit push",
          "cwd": "libs/database/infrastructure"
        }
      },
      "migrate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "drizzle-kit migrate",
          "cwd": "libs/database/infrastructure"
        }
      },
      "studio": {
        "executor": "nx:run-commands",
        "options": {
          "command": "drizzle-kit studio",
          "cwd": "libs/database/infrastructure"
        }
      },
      "generate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "drizzle-kit generate",
          "cwd": "libs/database/infrastructure"
        }
      }
    }
  },
  "dependencies": {
    "@swc/helpers": "~0.5.11",
    "@prisma/extension-accelerate": "^2.0.1",
    "@vercel/postgres": "^0.10.0",
    "drizzle-orm": "^0.44.1",
    "drizzle-zod": "^0.8.2",
    "pg": "^8.16.0",
    "@nestjs-cls/transactional": "^3.0.3",
    "@nestjs-cls/transactional-adapter-drizzle-orm": "^1.1.20",
    "postgres": "^3.4.7",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/pg": "^8.11.14",
    "drizzle-kit": "^0.31.1",
    "@testcontainers/postgresql": "^11.0.3",
    "testcontainers": "^11.0.3",
    "drizzle-seed": "^0.3.1"
  }
}
