{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-native",
    "checkJs": false,
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "moduleSuffixes": [".ios", ".android", ".native", ""]
  },
  "include": [
    "src",
    "*.ts",
    "*.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "references": [
    {
      "path": "../../tools/tailwind"
    },
    {
      "path": "../../libs/shared/domain"
    },
    {
      "path": "../../libs/api/infrastructure"
    }
  ],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
